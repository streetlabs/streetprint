<% form_for @item, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <div id="photos">
    <%= render :partial => 'photo', :collection => @item.photos %>
  </div>
  <%= link_to_function "Add photo" do |page|
    page.insert_html :bottom, :photos, :partial => 'photo', :object => Photo.new
  end %>
  <br /><br />
  <div class="item_photos">
    Existing photos -- check to delete <br />
    <%= render :partial => "item_photo", :collection => @item.photos %>
  </div>
  <p><%= f.submit "Submit" %></p>
<% end %>
