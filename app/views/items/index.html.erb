<% title "#{@plural}" %>

<div id="">
  
  <% form_tag items_path(:subdomain => @site.title), :method => 'get' do %>
    <div id="searchbox">
      <%= text_field_tag :search, params[:search], :id => 'searchfield' %>
      <%= submit_tag "Search", :name => nil %>
    </div>
  <% end %>
  
  <%= render :partial => 'items/items_table', :locals => {:items => @items} %>
  
  <% if @site.users.include? current_user %>
    <p>
      <%= link_to "Show site", root_url(:subdomain => @site.title) %> |
      <%= link_to "New #{@singular}", new_item_path(:subdomain => @site.title) %>
    </p>
  <% end %>
  
</div>