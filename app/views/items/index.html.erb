<% title "#{@site.title} - #{@plural}" %>

<div id="">
  
  <% form_tag site_items_path(@site), :method => 'get' do %>
    <div id="searchbox">
      <%= text_field_tag :search, params[:search], :id => 'searchfield' %>
      <%= submit_tag "Search", :name => nil %>
    </div>
  <% end %>
  
  <%= render :partial => 'items/items_table', :locals => {:items => @items} %>
  
  <% if @site.users.include? current_user %>
    <p>
      <%= link_to "Show site", site_path(@site) %> |
      <%= link_to "New #{@singular}", new_site_item_path(@site) %>
    </p>
  <% end %>
  
</div>