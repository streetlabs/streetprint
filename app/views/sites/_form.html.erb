<% form_for @site, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :logo, "Logo (A logo for your site, this can be changed later.)" %><br />
    <% unless @site.logo_file_name.blank? %>
      <%= image_tag @site.logo.url(:small) %><br />
    <% end %>
    <%= f.file_field :logo %>
  </p>
  <p>
    <%= f.label :singular_item, "What do you call your artifacts (singular)?" %><br />
    <%= f.text_field :singular_item %>
  </p>
  <p>
    <%= f.label :plural_item, "And the plural version?" %><br />
    <%= f.text_field :plural_item %>
  </p>
  <p>
    <%= f.label :welcome_blurb %><br />
    <%= f.text_area :welcome_blurb %>
  </p>
  <p>
    <%= f.label :about_project %><br />
    <%= f.text_area :about_project %>
  </p>
  <p>
    <%= f.label :about_procedures %><br />
    <%= f.text_area :about_procedures %>
  </p>
  <p><%= f.submit button_label %></p>
<% end %>
