<% title @site.title, false %>

<% content_for :admin_link do %>
  | <%= link_to "Edit This Site", edit_site_path(@site, :subdomain => false) %>
<% end %>

<div id="index_left">
  <div id="leftcontent">
    <div id="welcome">
      <h2>WELCOME TO <%= @site.name.upcase %></h2>
      <p>
        <%= sanitize @site.welcome_blurb %>
      </p>
    </div>
    <div id="stats">
      <h2>STATISTICS:</h2>
      <ul class="plain">
        <li><strong>Total pieces in database:</strong><%= Item.count %></li>
        <li><strong>Total images in database:</strong><%= Photo.count %></li>
      </ul>
    </div>
  </div>
</div>


<% item = Item.find_by_id(@site.featured_item) %>
<% item ||= @site.items.first %>
<% if item %>
  <% photo = item.photos.find_by_id(@site.featured_image) %>
  <% photo ||= item.photos.first %>
  <% if photo %>
    <div id="index_right">
      <div id="rightcontent">
        <h2 id="featured">FEATURED PIECE: </h2>
        <p id="featured_info"><%= link_to item.title, item_url(item, :subdomain => @site.title) %></p>
        <% if photo %>
          <%= link_to image_tag(photo.photo.url(:large), :alt => "", :id => "item_#{item.id}_photo_#{photo.id}"), item_url(item, :subdomain => @site.title) %>
        <% end %>
      </div><!--right_content-->
    </div><!--index_right-->
  <% end %>
<% end %>