<% title 'My Sites'  %>
<div id="sites">
  <% current_user.sites.each do |site| %>
    <div id="site_<%= site.id %>">
      <%= sanitize site.name %>
      <%= link_to "Show", site_path(site) %>
      <%= link_to "Edit Site", edit_site_path(site) %>
      <%= link_to "Edit Style", site_sitestyle_path(site) %>
      <%= link_to "Edit Users", site_memberships_path(site) %>
      <%= link_to "Edit #{site.plural_item}", site_items_path(site) %>
      <%= link_to "Edit Authors", site_authors_path(site) %>
      <%= link_to "Edit Categories", site_categories_path(site) %>
      <%= link_to "Edit Document Types", site_document_types_path(site) %>
    </div>
  <% end %>
</div>

<br />
<%= link_to 'Create a site', new_site_path %>