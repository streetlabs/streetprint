<% form_for [@site], :builder => AdminFormBuilder, :url => {:controller => 'user/sites', :action => action}, :html => { :multipart => true } do |f| %>
<fieldset>
  <%= f.error_messages %>
  <% if @site.name && @site.name != ""%>
  <legend>EDIT - <%=@site.name%></legend>
  <% else %>
  <legend>NEW SITE</legend>
  <% end %>
  <fieldset>
    <legend>site details</legend>
    <div class="details">
      <%= f.text_field :title %>
      <div class="description">
        This will be used to make your sites url (eg title.streetprint.org).<br /> It is your call by we'd suggest using a
        single word or abbreviation.
      </div>
    </div>
    <div class="details">
      <%= f.text_field :name %>
      <div class="description">This is name that the users will see for the site.</div>
    </div>
    <div class="details">
      <%= f.label :logo, "Logo:" %>
      <% unless @site.logo_file_name.blank? %>
        <%= image_tag @site.logo.url(:small) %>
      <% end %>
      <%= f.file_field :logo %>
      <div class="description">A logo for your site, this can be changed later.</div>
    </div>
    <div class="details">
      <%= f.text_field :singular_item, :label => "Item Name Singular" %>
      <div class="description">The name that you call a single artifact or item in your collection (singular).</div>
    </div>
    <div class="details">
      <%= f.text_field :plural_item, :label => "Item Name Plural" %>
      <div class="description">The name that you call a bunch of artifacts or items in your collection (plural).</div>
    </div>
  </fieldset>
  <fieldset>
    <legend>site messages</legend>
    <div class="details">
      <%= f.text_area :welcome_blurb, :rows => 10, :label => "Welcome Message" %>
      <div class="description">
        A welcome message that will appear on your site home page for all your visitors.<br />
        This message can contain markdown so that it will contain links and formatting.
      </div>
    </div>
    <div class="details">
      <%= f.text_area :about_project, :rows => 10, :label => "About this Site Message" %>
      <div class="description">
        An about message that will appear on your site home page for all your visitors.<br />
        This message can contain markdown so that it will contain links and formatting.
      </div>
    </div>
    <div class="details">
      <%= f.text_area :about_procedures, :rows => 10, :label => "Collection Procedures" %>
      <div class="description">
        Any procedures that you used to obtain your collection.
        This will appear on your about page for all your visitors.
        This message can contain markdown so that it will contain links and formatting.
      </div>
    </div>
  </fieldset>
  <div class="submit"><%= f.submit button_label %></div>
</fieldset>
<% end %>
