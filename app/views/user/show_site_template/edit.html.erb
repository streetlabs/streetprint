<% title "Home page" %>

<% form_for [@show_site_template], :builder => AdminFormBuilder, :url => { :controller => :show_site_template, :action => :update } do |f| %>
  <fieldset>
    <legend>Home Page Template</legend>
    <%= f.error_messages %>
    <%= f.text_area :template, :rows=>20 %>
    <%= f.text_area :css, :rows=>20 %>
    <div class="submit"><%= f.submit "Save" %></div>
  </fieldset>
<% end %>




