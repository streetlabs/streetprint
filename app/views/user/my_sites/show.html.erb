      <%= link_to "Custom Data Types", custom_data_types_path(:subdomain => site.title) %><br />
      <%= link_to image_tag("/images/icons/narratives.png", :title => "Narratives", :alt => "Narratives", :border => 0, :class => "icon"), narrativeadmin_index_path(:subdomain => site.title) %>
      <%= link_to "Narratives", narrativeadmin_index_path(:subdomain => site.title) %><br />
    </div>
  </div>
  <% end %>


