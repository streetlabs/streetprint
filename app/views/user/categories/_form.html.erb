<% form_for [@site, @category], :builder => AdminFormBuilder, :url => {:controller => 'user/categories', :action => action, :subdomain => @site.title} do |f| %>
<fieldset>
  <%= f.error_messages %>
  <% if f.object.new_record? %>
  <legend>New Category</legend>
  <% else %>
  <legend>Edit Category</legend>
  <% end %>

  <%= f.text_field :name %>
  
  <div class="submit"><%= f.submit "Submit" %></div>
<% end %>
