<%= link_to image_tag(large_photo.photo.url(:large), :alt => ""), 
  large_photo.photo.url, :target => '_blank' %><br />
  
<% if @site.users.include?(current_user) %>
  <% form_for @site, :url => { :controller => 'featured_items', :action => 'update' } do |f| %>
    <%= hidden_field_tag 'site[featured_item]', "#{large_photo.item.id}" %>
    <%= hidden_field_tag 'site[featured_image]', "#{large_photo.id}" %>
    <%= submit_tag "[set featured]", :id => "set_featured_item_#{large_photo.id}" %>
  <% end %>
<% end %>